@model ReadingsViewModel

@{
    ViewData["Title"] = "Readings";
}

<div class="container">
    <div class="row">
        <div class="col">
            @await Html.PartialAsync("ReadingsPartial", Model)
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a asp-action="GetReading" asp-controller="Home"
                asp-route-year="@Model.Previous.Year"
                asp-route-month="@Model.Previous.Month"
                asp-route-day="@Model.Previous.Day">&lt;&lt; Previous</a>
            |
            <a asp-action="Index" asp-controller="Home">Today</a>
            |
            <a asp-action="GetReading" asp-controller="Home"
                asp-route-year="@Model.Next.Year"
                asp-route-month="@Model.Next.Month"
                asp-route-day="@Model.Next.Day">Next &gt;&gt;</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <p id="reader">@BibleReadings2.Helpers.Utilities.BuildReaderDescription(Model.LastReader)</p>
            <p>
                <select id="readerSelect">
                    <option selected value="">Who read first today?</option>
                    <option value="Andy">Andy</option>
                    <option value="Melissa">Melissa</option>
                </select>
            </p>
        </div>
    </div>
</div>
